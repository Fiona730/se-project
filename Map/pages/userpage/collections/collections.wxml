<!--pages/userpage/collections/collections.wxml-->

<scroll-view scroll-y="true" class="post-container" bindscrolltoupper="onPullUpper">

  <block wx:for="{{posts}}" wx:key="key">
    <view class="feed-item" hover-class="hover-common" id="{{item._id}}" bindtap="tapPost" bindlongtap="longtapPost" data-idx="{{index}}">
      <view class="feed-user">
        <view class="avatar">
          <image src="{{item.avatarURL}}"></image>
        </view>
        <view class="source">
          <view class="username">{{item.userName}}</view>
          <view class="datetime">{{item.createTime}}</view>
        </view>

        <view class="more" catchtap="showOptions" data-idx="{{index}}">
          <image src="/pages/userpage/res/more.png"></image>
        </view>

      </view>

      <view class="feed-content">
        <view class="banner">
          <view class="post-type">
            <text>{{item.type}}</text>
          </view>
          <view class="title">
            <text>{{item.title}}</text>
          </view>
        </view>
        <view class="content">
          <text>{{item.content}}</text>
        </view>
        <view class="actions">
          <text>{{item.hot}}° · {{item.num_likes}} Likes · {{item.num_replies}} Replies</text>
        </view>
      </view>
    </view>
  </block>

</scroll-view>

<view class="cu-modal {{showOptions==true?'show':''}}" bindtap="hideOptions">
  <view class="cu-dialog" catchtap>
    <view class="cu-list menu text-left solid-top">
      <view class="cu-item" catchtap="removeCollection">
        <view class="content">
          <view class="option-item" >
            <text>取消收藏</text>
          </view>
        </view>
      </view>

      <view class="cu-item"  catchtap="showPost">
        <view class="content">
          <view class="option-item">
            <text>普通地查看帖子</text>
          </view>
        </view>
      </view>
    </view>
  </view>
</view>

<block wx:if="{{num_posts==0}}">
<view class="empty-hint">
<text>收藏夹是空的...</text>
</view>
</block>