<scroll-view scroll-y class="scrollPage">
  <view class="UCenter-bg">

    <!-- <image src="/resources/nouser_akarin.jpg" class="png" mode="widthFix"></image> -->
    <view class="cu-avatar xl round margin-bottom" style="background-image:url(/resources/nouser_akarin.jpg);"></view>
  
    <view class="text-xl">Username
      <text class="text-df">{{"small"}}</text>
    </view>
    <view class="margin-top-sm">
      <text>用户</text>
    </view>

  </view>
  <view class="padding flex text-center text-grey bg-white shadow shadow-lg">
    <view class="flex flex-sub flex-direction solid-right">
      <view class="text-xxl text-orange">1</view>
      <view class="margin-top-sm">
        <text class="cuIcon-formfill"></text> Posts</view>
    </view>
    <view class="flex flex-sub flex-direction solid-right">
      <view class="text-xxl text-blue">2</view>
      <view class="margin-top-sm">
        <text class="cuIcon-favorfill"></text> Collections </view>
    </view>
    <view class="flex flex-sub flex-direction">
      <view class="text-xxl text-green">3</view>
      <view class="margin-top-sm">
        <text class="cuIcon-friendfill"></text> Friends </view>
    </view>
  </view>

  <view class="cu-list menu card-menu margin-top-xl margin-bottom-xl shadow-lg radius">
    <view class="cu-item arrow">
      <view class="content" bindtap="toUserPosts">
        <text class="cuIcon-formfill text-green"></text>
        <text class="text-grey">这位大爷发过的</text>
      </view>
    </view>
    <view class="cu-item arrow">
      <view class="content" bindtap="toUserCollections">
        <text class="cuIcon-favorfill text-yellow"></text>
        <text class="text-grey">这位大爷收藏的</text>
      </view>
    </view>
  </view>

  <view class="cu-tabbar-height"></view>
</scroll-view>