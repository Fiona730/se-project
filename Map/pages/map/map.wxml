<view class="Mmap">
  <map 
    id="map" 
    longitude="{{longitude}}" 
    latitude="{{latitude}}" 
    scale="14" 
    controls="{{controls}}" bindcontroltap="controltap" 
    markers="{{markers}}" bindmarkertap="markertap"
    polyline="{{polyline}}" 
    circles="{{circles}}" 
    show-location
    bindregionchange="regionchange" 
    style="width: 100%; height: 100vh;">
    <cover-view class="top">
      <cover-view wx:if="{{hasUserInfo && !userInfo.avatarUrl}}" class="userinfo" bindtap="userchange">
        <cover-image class="userinfo-avatar" src="/resources/nouser.png"></cover-image>
      </cover-view>
      <cover-view wx:elif="{{hasUserInfo}}" class="userinfo" bindtap="userchange">
        <cover-image class="userinfo-avatar" src="{{userInfo.avatarUrl}}"></cover-image>
      </cover-view>
      <cover-view wx:else class="nouser" bindtap="nouser">
        <cover-image class="userinfo-avatar" src="/resources/nouser_akarin.jpg"></cover-image>
      </cover-view>
       <cover-view class="search-box">
        <cover-view class='wordholder' bindtap='tapInput'>
        <cover-view class='text'>{{inputInfo}}</cover-view>
        <input class='input' value='{{inputModel}}' focus='{{inputFocus}}' bindblur='blurInput'></input>
        </cover-view>
        <cover-view class="shu"></cover-view>
        <cover-view class="tab" bindtap="choosetab">选择tab</cover-view>
      </cover-view>
    </cover-view>
    <cover-view wx:if="{{hastablist}}" class="tablist">
      <cover-view wx:for="{{tablist}}" class="tab">
      {{item.value}}
      </cover-view>
    </cover-view>
    <cover-view wx:if="{{!location}}" class="location" bindtap="tapclick">
      <cover-image class="marker" src="/resources/location.png"></cover-image>
    </cover-view>
    <cover-view class="addbottom" bindtap="addloc" animation="{{animloc}}">
      <cover-image class="marker" src="/resources/1.png"></cover-image>
    </cover-view>
    <cover-view class="addbottom" bindtap="addmail" animation="{{animmail}}">
      <cover-image class="marker" src="/resources/mail.png"></cover-image>
    </cover-view>
    <cover-view class="addbottom" bindtap="addchk" animation="{{animchk}}">
      <cover-image class="marker" src="/resources/checkin.png"></cover-image>
    </cover-view>
    <cover-view class="add" bindtap="add" animation="{{animadd}}">
      <cover-image class="marker" src="/resources/add.png"></cover-image>
    </cover-view>
  </map>
</view>