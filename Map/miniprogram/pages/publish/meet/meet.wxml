<view class='container'>
  <view class='mask'></view>
  <view class="query">
  
  <view class="viewTitle">
      <text class="view-Name">主题</text>
      <view class="lineView"></view>
  </view>
  <view class="box1">
      <input class="input" maxlength="10" placeholder="最大输入长度10" bindinput="titleInput" />
  </view>

  <view class="viewTitle">
      <text class="view-Name">内容</text>
      <view class="lineView"></view>
  </view>

  <view class="box2">
      <input class="input" placeholder="请输入内容" bindinput="contentInput"/>
  </view>
  
  <view class="locationBox">
      {{position.latitude}},{{position.longitude}}
  </view>
