    <view class="section__title"></view>
    <picker mode="date" value="{{date}}" start="2020-03-19" end="2099-12-31" bindchange="bindDateChange">
      <view class="picker">
        集合日期: {{date}}
      </view>
    </picker>
  </view>

  <view class="section">
    <view class="section__title"></view>
    <picker mode="time" value="{{time}}" start="00:00" end="23:59" bindchange="bindTimeChange">
      <view class="picker">
        集合时间: {{time}}
      </view>
    </picker>
  </view>


  <view class="button1">
